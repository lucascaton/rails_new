source 'https://rubygems.org'
ruby '1.9.3'

gem 'rails', '3.2.13'
gem 'jquery-rails'
<%- if @haml -%>
gem 'haml-rails'
<%- end -%>
gem '<%= database_adapter %>'
<%- if @twitter_bootstrap -%>
gem 'therubyracer'
gem 'less-rails'
gem 'twitter-bootstrap-rails'
<%- end -%>
<%- if @pt_br_locales -%>
gem 'rails-i18n'
<%- end -%>

group :development do
  gem 'annotate'
  gem 'better_errors'
  # gem 'binding_of_caller'
  gem 'thin'
  gem 'meta_request'
end

group :development, :test do
  gem 'pry-meta'
end

<%- if @test_gems -%>
group :test do
  gem 'capybara'
  gem 'factory_girl_rails'
  gem 'forgery'
  gem 'poltergeist'
  gem 'rspec-rails'
  gem 'simplecov', require: false
end
<%- end -%>

group :assets do
  gem 'coffee-rails', '~> 3.2.2'
  gem 'uglifier', '~> 1.2.4'
end
